<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#878787"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:text="Controller"
            android:textSize="20sp"
            android:textColor="#F1F1F1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

<!--        <Button-->
<!--            android:layout_margin="20dp"-->
<!--            android:text="exit"-->
<!--            android:id="@+id/b_controller_exit"-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="wrap_content"/>-->

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="foward"
            android:id="@+id/b_forward"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:text="left"
                android:id="@+id/b_left"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <Button
                android:text="stop"
                android:background="#C8C8C8"
                android:id="@+id/b_stop"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <Button
                android:text="right"
                android:id="@+id/b_right"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:text="backward"
            android:id="@+id/b_backward"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Speed"
            android:textSize="20sp"
            android:textColor="#F1F1F1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="30dp"
            android:text="3"
            android:id="@+id/tv_speed"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#F1F1F1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="-"
            android:textSize="22dp"
            android:id="@+id/b_speed_deny"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <Button
            android:text="+"
            android:textSize="22dp"
            android:id="@+id/b_speed_add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Degree"

            android:textSize="20sp"
            android:textColor="#F1F1F1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginHorizontal="25dp"
            android:text="3"
            android:id="@+id/tv_degree"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#F1F1F1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="-"
            android:textSize="22dp"
            android:layout_width="50dp"
            android:id="@+id/b_degree_deny"
            android:layout_height="wrap_content"/>

        <Button
            android:text="+"
            android:id="@+id/b_degree_add"
            android:textSize="22dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</LinearLayout>